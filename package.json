{
  "name": "midway-cleaning-platform",
  "version": "1.0.0",
  "description": "Enterprise cleaning service management platform",
  "scripts": {
    "dev:all": "./start.sh",
    "dev": "next dev",
    "build": "npm run verify && next build",
    "start": "next start",
    "cleanup": "bash scripts/cleanup.sh",
    "verify": "bash scripts/verify.sh",
    "fix:middleware": "bash scripts/fix-middleware.sh",
    "websocket": "node server/websocket.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:load": "k6 run tests/load/main.js",
    "test:ci": "npm run test && npm run test:e2e && npm run test:load",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "db:seed": "prisma db seed",
    "prepare": "husky install",
    "export": "next export",
    "deploy": "next build && next export && touch out/.nojekyll",
    "predeploy": "npm run build",
    "postdeploy": "echo 'Deployment complete'",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe"
  },
  "dependencies": {
